name: Changesets
on:
  push:
    branches:
      - v-next
env:
  CI: true
  PNPM_CACHE_FOLDER: .pnpm-store
jobs:
  changeset-check:
    runs-on: ubuntu-latest
    outputs:
      changesets: ${{ steps.changesetcheck.outputs.changesets }}
    steps:
      - name: checkout code repository
        uses: actions/checkout@v4
        with:
          fetch-depth: 0
      - name: checkout code repository
        uses: actions/checkout@v4
        with:
          fetch-depth: 0
      - uses: pnpm/action-setup@v4
        with:
          version: 9
      - uses: actions/setup-node@v4
        with:
          node-version: 22
          cache: "pnpm"
      - name: Install
        run: pnpm install --no-frozen-lockfile
      - name: changesetcheck
        run: |
          pnpm changeset status --output=changes.json
          cat changes.json | grep "\"releases\": \[\],"
          if [ $? -eq 0 ]; then
            echo "No changeset found"
            echo "changesets=true" >> "$GITHUB_OUTPUT"
          else
            echo "Changesets found"
            echo "changesets=false" >> "$GITHUB_OUTPUT"
          fi
      
  release:
    runs-on: ubuntu-latest
    needs: changeset-check
    steps:
      - env:
        CHANGESETS: ${{needs.changeset-check.outputs.changesets}}
      run: echo "$CHANGESETS"